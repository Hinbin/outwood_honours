header.masthead.bg-primary.text-white.text-center   
  .container.d-flex.align-items-center.flex-column
    /! Masthead Image
    =image_tag 'Outwood Honours Logo No Ribbons.png', class:'masthead-avatar mb-3'
    /! Masthead Heading
    h1.masthead-heading.text-uppercase.mb-0 Earn it.  Own it.
    /! Icon Divider
    .divider-custom.divider-light
      .divider-custom-line
      .divider-custom-icon
        =icon('fas', 'star')
      .divider-custom-line
    /! Masthead Subheading
section#portfolio.page-section.portfolio.text-center
  .container
    /! Badges Section Heading
    h2.page-section-heading.text-uppercase.text-secondary.mb-0 Badges Spotlight
    /! Icon Divider
    .divider-custom
      .divider-custom-line
      .divider-custom-icon
        =icon('fas', 'star' )
      .divider-custom-line
    /! Portfolio Grid Items
    .row
      /! Portfolio Item 1
      .col-md-6.col-lg-4
        .portfolio-item.mx-auto data-target="#portfolioModal1" data-toggle="modal" 
          .portfolio-item-caption.d-flex.align-items-center.justify-content-center.h-100.w-100
            .portfolio-item-caption-content.text-center.text-white
              i.fas.fa-plus.fa-3x
          =image_tag('calculator.png')
          p =Badge.first.name
      /! Portfolio Item 2
